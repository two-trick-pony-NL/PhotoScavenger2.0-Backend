# Base image
FROM python:3.10-slim-bullseye

# Environment
ENV PYTHONDONTWRITEBYTECODE=1
ENV PYTHONUNBUFFERED=1

# Set working directory
WORKDIR /app

# Install system dependencies for OpenCV and clean cache
RUN apt-get update && apt-get install -y --no-install-recommends \
        libgl1 \
        libglib2.0-0 \
    && rm -rf /var/lib/apt/lists/*

# Copy only requirements first (cached if unchanged)
COPY requirements.txt .

# Install Python dependencies
RUN pip install --no-cache-dir -r requirements.txt

# Copy YOLO weights (rarely changes)
COPY yolo11n_object365.pt .

# Copy the rest of the application
COPY . .

# Expose port
EXPOSE 80

# Start the app
CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "80", "--ws", "websockets", "--workers", "1", "--timeout-keep-alive", "120", "--loop", "asyncio"]
